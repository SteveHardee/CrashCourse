{
  "$schema": "https://schema.management.azure.com/schemas/2019-04-01/deploymentTemplate.json#",
  "contentVersion": "1.0.0.0",
  "parameters": {
    "vmName": {
      "type": "string"
    },
    "adminPassword": {
      "type": "securestring"
    },
    "vmSize": {
      "type": "string"
    },
    "datadiskcount": {
      "type": "int",
      "defaultValue": 0
    },
    "datadiskcaching": {
      "type": "string",
      "defaultValue" : "None",
      "allowedValues": [
        "None",
        "ReadWrite",
        "ReadOnly"
      ]
    },
    "datadisksize": {
      "type": "int",
      "defaultValue": 31
    },
    "vmOS": {
      "type": "string"
    },
    "vmOSversion":{
      "type": "string",
      "defaultValue": "latest"
    },
    "vmPublisher":{
      "type": "string",
      "defaultValue": "MicrosoftWindowsServer"
    },
    "vmOffer":{
      "type": "string",
      "defaultValue": "WindowsServer"
    },
   	"subnetRef": {
  	  "type": "string"
  	},
    "acceleratedNetworking": {
	    "type": "bool"
	  },
    "storageType": {
      "type": "string"
    },
    "autoShutdownTime": {
      "type": "string"
    },
    "avSetName": {
      "type": "string"
    },
    "licensetype": {
      "type": "string"
    },
    "adminUsername": {
      "type": "string",
      "defaultValue": "AzureAdmin"
    },
    "timeZone": {
      "type": "string",
      "defaultValue": "Eastern Standard Time"
    },
    "DomainJoin": {
      "type": "string",
      "defaultValue": "No"
    },
    "DomainToJoin": {
      "type": "string",
      "defaultValue": "No"
    },
    "DomainJoinUserName": {
      "type": "string",
      "defaultValue": "None"
    },
    "DomainJoinPassword": {
      "type": "securestring",
      "defaultValue": "None"
    },
    "CustomBranch": {
      "type": "string",
      "defaultValue": "master",
      "metadata": {
        "description": "Advanced option. Do not change unless intentional."
      }
    },
    "InstallClusteringFeature": {
      "type": "bool",
      "defaultValue": false,
      "allowedValues": [
          false,
          true
      ]
    }
  },
  "variables": {
    "osDiskName": "[concat(parameters('vmName'),'_OSDisk')]",
    "nicName": "[concat(parameters('vmName'), '_Nic')]",
    "githubURL": "https://raw.githubusercontent.com/SteveHardee/AzureVM/",
    "nictemplateURI": "[concat(variables('githubURL'), parameters('CustomBranch'), '/scripts/nicdeploy.json')]",
    "avSetID": "[resourceId('Microsoft.Compute/availabilitySets', parameters('avSetName'))]",
    "artifactsURI": "[concat(variables('githubURL'), parameters('CustomBranch'), '/artifacts/')]"
  },
  "resources": [
    {
      "apiVersion": "2021-04-01",
      "name": "[concat('linked-nic-', parameters('vmName'))]",
      "type": "Microsoft.Resources/deployments",
      "properties": {
          "mode": "Incremental",
          "templateLink": {
              "uri": "[variables('nictemplateURI')]",
              "contentVersion": "1.0.0.0"
          },
          "parameters": {
              "nicName": {
                  "value": "[variables('nicName')]"
              },
              "subnetRef": {
                  "value": "[parameters('subnetRef')]"
              },
              "acceleratedNetworking": {
                  "value": "[parameters('acceleratedNetworking')]"
              }
          }
      },
      "dependsOn": []
    },
    {
      "name": "[parameters('vmName')]",
      "type": "Microsoft.Compute/virtualMachines",
      "apiVersion": "2021-03-01",
      "location": "[resourceGroup().location]",
      "tags": {
        "AutoShutDownTime": "[parameters('autoShutdownTime')]"
      },
      "dependsOn": [
        "[resourceId('Microsoft.Resources/deployments', concat('linked-nic-', parameters('vmName')))]"
      ],
      "properties": {
        "licenseType": "[parameters('licensetype')]",
        "osProfile": {
          "computerName": "[parameters('vmName')]",
          "adminUsername": "[parameters('adminUsername')]",
          "adminPassword": "[parameters('adminPassword')]",
          "windowsConfiguration": {
            "provisionVmAgent": true,
            "timeZone": "[parameters('timeZone')]",
            "enableAutomaticUpdates": true
          }
        },
        "hardwareProfile": {
          "vmSize": "[parameters('vmSize')]"
        },
        "storageProfile": {
          "imageReference": {
            "publisher": "[parameters('vmPublisher')]",
            "offer": "[parameters('vmOffer')]",
            "sku": "[parameters('vmOS')]",
            "version": "[parameters('vmOSversion')]"
          },
          "osDisk": {
            "name": "[variables('osDiskName')]",
            "caching": "ReadWrite",
            "createOption": "FromImage",
            "managedDisk": {
              "storageAccountType": "[parameters('storageType')]"
            }
          },
          "copy": [
            {
              "name": "dataDisks",
              "count": "[parameters('datadiskcount')]",
              "input": {
                "caching": "[parameters('datadiskcaching')]",
                "diskSizeGB": "[parameters('datadisksize')]",
                "lun": "[copyIndex('dataDisks')]",
                "name": "[concat(parameters('vmName'), '_datadisk', copyIndex('dataDisks'))]",
                "createOption": "Empty",
                "managedDisk": {
                  "storageAccountType": "[parameters('storageType')]"
                }
              }
            }
          ]
        },
        "diagnosticsProfile": {
          "bootDiagnostics": {
            "enabled": true
          }
        },
        "networkProfile": {
          "networkInterfaces": [
            {
              "id": "[resourceId('Microsoft.Network/networkInterfaces', variables('nicName'))]"
            }
          ]
        },
		"availabilitySet": {
          "id": "[variables('avSetID')]"
        }
      }
    },
    {
      "condition": "[equals(parameters('DomainJoin'), 'Yes')]",
      "apiVersion": "2020-12-01",
      "type": "Microsoft.Compute/virtualMachines/extensions",
      "name": "[concat(parameters('vmName'),'/joindomain')]",
      "location": "[resourceGroup().location]",      
      "dependsOn": [
        "[concat('Microsoft.Compute/virtualMachines/', parameters('vmName'))]"
      ],
      "properties": {
        "publisher": "Microsoft.Compute",
        "type": "JsonADDomainExtension",
        "typeHandlerVersion": "1.3",
        "autoUpgradeMinorVersion": true,
        "settings": {
          "Name": "[parameters('domainToJoin')]",
          "User": "[parameters('DomainJoinUserName')]",
          "Restart": "true",
          "Options": 3
        },
        "protectedSettings": {
          "Password": "[parameters('DomainJoinPassword')]"
        }
      }
    },
    {
      "condition": "[equals(parameters('InstallClusteringFeature'), bool('true'))]",
      "name": "[concat(parameters('vmName'), '/Install-Clustering-Feature')]",
      "type":"Microsoft.Compute/virtualMachines/extensions",
      "location": "[resourceGroup().location]",
      "apiVersion": "2021-07-01",
      "dependsOn":  [
          "[parameters('vmName')]",
          "[resourceId('Microsoft.Compute/virtualMachines/extensions', parameters('vmName'), 'joindomain')]"
      ],
      "properties": {
          "publisher": "Microsoft.Powershell",
          "type": "DSC",
          "typeHandlerVersion": "2.0",
          "autoUpgradeMinorVersion": true,
          "settings": {
              "configuration": {
                  "url": "[concat(variables('artifactsURI'), 'clustering.ps1.zip')]",
                  "script": "clustering.ps1",
                  "function": "clusternode"
              },
              "configurationArguments": {}
          },
          "protectedSettings": {}
      }
    }
  ],
  "outputs": {}
}
